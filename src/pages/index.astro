---
import Base from "../layouts/base.astro";
import epictetus from "/img/dither_epictetus_no_bg.png";

import { Icon } from "astro-icon";
import Read from "../components/Read.astro";
---

<Base
  title="The manual, a compilation of the Enchiridion translations"
  description="We compiled translations from diferent authors at diferent points of history alongisde the original Enchiridion from Epictetus to make sure you can easily read and share your favorite version of it."
>
  <section
    class="grid lg:grid-cols-[repeat(16,1fr)] lg:grid-rows-4 gap-4 px-12 justify-center min-h-[80vh]"
  >
    <div class="col-start-1 col-end-8 row-start-2">
      <h1 class="inline uppercase text-6xl font-bold">the Manual</h1>
      <span class="inline"
        >on how to live, a book to keep always ready to hand.
      </span>
    </div>

    <div class="flex flex-col gap-8 col-start-1 col-end-6 row-start-3">
      <p>
        The <strong>Enchiridion</strong> is a collection of stoic ethical advice
        compiled by Arrian, based on the Discourses of Epictetus.
      </p>
      <a
        class="flex gap-1 items-center p-2 -ml-2 w-min underline underline-offset-2 outline-none focus-visible:ring-2 ring-zinc-500 ring-offset-zinc-100 ring-offset-2 group"
        href="#read"
        >Read <Icon
          class="inline h-[15px] w-[15px] transition-transform transform translate-y-[1px] group-focus-visible:translate-x-1 group-hover:translate-x-1"
          name="radix-icons:arrow-right"
        />
      </a>
    </div>
    <div
      class="col-start-6 col-end-[9] sm:col-start-10 sm:col-end-[16] row-start-[-1] row-end-1 self-end justify-self-end aspect-[3/4] max-h-[40vh] lg:max-h-[70vh]"
    >
      <figure class="relative h-full bg-zinc-200">
        <img
          loading="eager"
          class="h-full w-full object-cover"
          src={epictetus}
          alt="stoic philosopher Epictetus"
        />
      </figure>
    </div>
  </section>
  <div class="min-h-screen flex flex-col justify-between">
    <section><Read /></section>
    <footer class="px-12 py-4">
      <a
        class="flex gap-1 items-center p-2 -ml-2 w-max underline underline-offset-2 outline-none focus-visible:ring-2 ring-zinc-500 ring-offset-zinc-100 ring-offset-2 group"
        href="/about"
        >More about this project <Icon
          class="inline h-[15px] w-[15px] transition-transform transform translate-y-[1px] group-focus-visible:translate-x-1 group-hover:translate-x-1"
          name="radix-icons:arrow-right"
        />
      </a>
    </footer>
  </div>
</Base>
